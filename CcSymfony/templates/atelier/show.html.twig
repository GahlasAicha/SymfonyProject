{% extends 'base.html.twig' %}

{% block title %}Atelier{% endblock %}

{% block body %}
    <h1>Détails de l'atelier</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ atelier.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ atelier.nom }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>
                {# Afficher la description en HTML après conversion Markdown #}
                <div>{{ atelier.descriptionHtml|raw }}</div>
            </td>
        </tr>
        <tr>
            <th>Instructeur</th>
            <td>
                {% if atelier.instructeur is not null %}
                    {{ atelier.instructeur.email }}  {# Affiche l'email de l'instructeur #}
                {% else %}
                    Aucun instructeur assigné
                {% endif %}
            </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_atelier_index') }}">Retour à la liste</a>

    <a href="{{ path('app_atelier_edit', {'id': atelier.id}) }}">Modifier l'atelier</a>

    {{ include('atelier/_delete_form.html.twig') }}
{% endblock %}
